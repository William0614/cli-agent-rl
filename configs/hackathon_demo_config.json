{
  "workload_name": "hackathon-demo-network-server",
  "reward_metric": "requests_per_second",
  "benchmark_command": "python3 $(dirname $0)/../benchmarks/fast_network_bench.py",
  "action_space": [
    {
      "param": "net.core.somaxconn",
      "min": 128,
      "max": 4096,
      "type": "int",
      "description": "Maximum number of connection requests queued"
    },
    {
      "param": "net.ipv4.tcp_max_syn_backlog",
      "min": 128,
      "max": 4096,
      "type": "int",
      "description": "Maximum SYN backlog queue length"
    }
  ],
  "state_space": [
    {
      "metric": "cpu_usage",
      "description": "Current CPU utilization percentage"
    },
    {
      "metric": "memory_used_percent",
      "description": "Memory utilization percentage"
    }
  ],
  "training_config": {
    "total_timesteps": 300,
    "n_steps": 64,
    "batch_size": 32,
    "n_epochs": 5,
    "learning_rate": 0.001,
    "gamma": 0.95,
    "benchmark_timeout": 15,
    "max_steps_per_episode": 10
  }
}
