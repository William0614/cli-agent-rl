{
  "workload_name": "hackathon-demo-memory-optimization",
  "reward_metric": "operations_per_second",
  "benchmark_command": "python3 benchmarks/fast_memory_bench.py",
  "action_space": [
    {
      "param": "vm.swappiness",
      "min": 0,
      "max": 100,
      "type": "int",
      "description": "How aggressively kernel swaps memory pages"
    },
    {
      "param": "vm.dirty_ratio",
      "min": 5,
      "max": 80,
      "type": "int",
      "description": "Percentage of system memory for dirty pages before writes"
    }
  ],
  "state_space": [
    {
      "metric": "cpu_usage",
      "description": "Current CPU utilization percentage"
    },
    {
      "metric": "memory_used_percent",
      "description": "Memory utilization percentage"
    }
  ],
  "training_config": {
    "total_timesteps": 200,
    "n_steps": 64,
    "batch_size": 32,
    "n_epochs": 5,
    "learning_rate": 0.001,
    "gamma": 0.95,
    "benchmark_timeout": 10,
    "max_steps_per_episode": 10
  }
}
